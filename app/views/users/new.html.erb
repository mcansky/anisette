  <div class="project">
    <div class="last_commits">

    <h4>Sign up as a new user</h4>

    <%= error_messages_for :user %>
		<% form_for @user do |f| %>
			<%= f.error_messages %>
			<p>
				<%= f.label :login %><br />
				<%= f.text_field :login %>
			</p>
			<p>
				<%= f.label :email %><br />
				<%= f.text_field :email %>
			</p>
			<p>
				<%= f.label :password %><br />
				<%= f.password_field :password %>
			</p>
			<p>
				<%= f.label :password_confirmation %><br />
				<%= f.password_field :password_confirmation %>
			</p>
			<p><%= f.submit "Submit" %></p>
		<% end %>
    </div>
  </div>
